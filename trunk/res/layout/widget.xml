<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/widget">

	<LinearLayout android:paddingLeft="10px"
		android:paddingTop="3px" android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">

		<ImageButton android:id="@+id/widgetLogo" android:src="@drawable/icon"
			android:background="#0000" android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

		<LinearLayout android:paddingTop="3px"
			android:orientation="vertical" android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<TextView android:id="@+id/widgetTitle" android:text="@string/full_name"
				android:layout_marginLeft="5px" android:textColor="#000000"
				android:textSize="10sp" android:textStyle="bold"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_weight="1" />

			<LinearLayout android:orientation="horizontal"
				android:layout_width="fill_parent" android:paddingRight="11px"
				android:layout_height="wrap_content">

				<Button android:id="@+id/cicleButton" android:text="≥"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:width="37px" />

				<Button android:id="@+id/nextTagButton" android:text=">"
					android:width="37px" android:layout_width="wrap_content"
					android:layout_height="wrap_content" />

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

	<TextView android:id="@+id/tagItem" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginLeft="22px"
		android:height="12px" android:layout_marginRight="10px"
		android:textColor="#000000" android:textStyle="bold" android:textSize="10sp" />

	<TextView android:id="@+id/widgetItem" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_marginLeft="22px"
		android:height="64px" android:layout_marginRight="10px"
		android:textColor="#000000" />

	<LinearLayout android:orientation="horizontal"
		android:paddingLeft="13px" android:layout_width="fill_parent"
		android:paddingRight="12px" android:layout_height="wrap_content"
		android:layout_weight="1">

		<Button android:id="@+id/checkButton" android:text="√"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:width="24px" android:layout_weight="1" />

		<Button android:id="@+id/addTaskButton" android:text="+"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:width="24px" android:layout_weight="1" />

		<Button android:id="@+id/nextTaskButton" android:text="&gt;"
			android:width="24px" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_weight="1" />

	</LinearLayout>

</LinearLayout>