<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/widget">

	<LinearLayout android:paddingLeft="10px"
		android:paddingTop="3px" android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">

		<ImageButton android:id="@+id/widgetLogo" android:src="@drawable/icon"
			android:background="#0000" android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

		<LinearLayout android:paddingTop="30px"
			android:orientation="vertical" android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<TextView android:id="@+id/widgetTitle" android:text="@string/full_name"
				android:layout_marginLeft="1px" android:textColor="#000000"
				android:textSize="10sp" android:textStyle="bold"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:layout_weight="1" />

			<!--
				<LinearLayout android:layout_marginTop="-5px"
				android:orientation="horizontal" android:layout_width="fill_parent"
				android:layout_height="wrap_content"> <ImageButton
				android:id="@+id/widgetLeft" android:src="@drawable/back"
				android:background="#0000" android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="-8px" /> <ImageButton
				android:id="@+id/widgetRight" android:src="@drawable/forward"
				android:background="#0000" android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="-15px" /> </LinearLayout>
			-->

		</LinearLayout>

	</LinearLayout>

	<TextView android:id="@+id/widgetItem" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:background="#000000"
		android:layout_marginLeft="22px" android:layout_marginBottom="20px"
		android:layout_marginRight="10px" android:textColor="#000000" />

</LinearLayout>